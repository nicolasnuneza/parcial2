<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.labsoftware09.calculador.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="HI"
            android:id="@+id/textView"
            android:background="@android:color/darker_gray"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:text="0"
            android:fontFamily="monospace"
            android:textAlignment="textEnd"
            android:textSize="60dp"
            android:maxLength="10"
            android:id="@+id/textV"
            android:background="@android:drawable/editbox_dropdown_light_frame" />

        <Button
            android:text="limbiar"
            android:layout_width="match_parent"
            android:id="@+id/button"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:onClick="onClickLimpia" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:text="@string/num_7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/num_7"
                    android:layout_weight="1"
                    android:onClick="num_7 "
                    android:background="@android:drawable/checkbox_off_background" />

                <Button
                    android:text="@string/num_8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/num_8"
                    android:layout_weight="1"
                    android:onClick="num_8"
                    android:background="@android:drawable/checkbox_off_background" />
                <Button
                    android:text="@string/num_9"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/num_9"
                    android:layout_weight="1"
                    android:onClick="num_9"
                    android:background="@android:drawable/checkbox_off_background" />
                <Button
                    android:text="@string/division"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/division"
                    android:layout_weight="1"
                    android:onClick="division"
                    android:background="@android:drawable/checkbox_off_background" />
                </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >
                <Button
                    android:text="@string/num_4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/num_4"
                    android:layout_weight="1"
                    android:onClick="num_4"
                    android:background="@android:drawable/checkbox_off_background" />
                <Button
                    android:text="@string/num_5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/num_5"
                    android:layout_weight="1"
                    android:onClick="num_5"
                    android:background="@android:drawable/checkbox_off_background" />
                <Button
                    android:text="@string/num_6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/num_6"
                    android:layout_weight="1"
                    android:onClick="num_6"
                    android:background="@android:drawable/checkbox_off_background" />
                <Button
                    android:text="@string/multiplicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/multiplicacion"
                    android:layout_weight="1"
                    android:onClick="multiplicacion"
                    android:background="@android:drawable/checkbox_off_background" />
                </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >
                <Button
                    android:text="@string/num_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/num_1"
                    android:layout_weight="1"
                    android:onClick="num_1"
                    android:background="@android:drawable/checkbox_off_background" />
                <Button
                    android:text="@string/num_2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/num_2"
                    android:layout_weight="1"
                    android:onClick="num_2"
                    android:background="@android:drawable/checkbox_off_background" />
                <Button
                    android:text="@string/num_3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/num_3"
                    android:layout_weight="1"
                    android:onClick="num_3"
                    android:background="@android:drawable/checkbox_off_background" />
                <Button
                    android:text="@string/menos"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/menos"
                    android:layout_weight="1"
                    android:onClick="resta"
                    android:background="@android:drawable/checkbox_off_background" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
                <Button
                    android:text="@string/num_0"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/num_0"
                    android:layout_weight="1"
                    android:onClick="num_0"
                    android:background="@android:drawable/checkbox_off_background" />

                <Button
                    android:text="@string/punto"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/punto"
                    android:layout_weight="1"
                    android:background="@android:drawable/checkbox_off_background"
                    android:onClick="punto" />

                <Button
                    android:text="@string/igual"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/igual"
                    android:layout_weight="1"
                    android:background="@android:drawable/checkbox_off_background" />
                <Button
                    android:text="@string/mas"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/mas"
                    android:layout_weight="1"
                    android:onClick="suma"
                    android:background="@android:drawable/checkbox_off_background" />
                </TableRow>
        </TableLayout>


    </LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="154dp">

    </TableRow>


</RelativeLayout>
